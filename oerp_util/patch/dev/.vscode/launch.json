    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo: Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "args": ["serve"]
        },
        {
            "name": "Odoo: Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "console": "integratedTerminal",
            "args": ["test",
                "--config=${workspaceFolder}/.config/odoo-test.conf",
                "--module=custom_module"
            ]
        }
    ]
}
